%h3.page-title
  #{t('groups', scope: 'admin.dashboard.index')} (#{@groups.total_count})
  = link_to t('new_group', scope: 'groups.new'), new_admin_group_path, class: "btn btn-new pull-right"

%p.light
  = t('.group_allows_you_to_keep_projects_organized')
  = t('.use_groups_for_uniting_related_projects')

%hr
= form_tag admin_groups_path, method: :get, class: 'form-inline' do
  .form-group
    = text_field_tag :name, params[:name], class: "form-control input-mn-300"
  = submit_tag t('general.search'), class: "btn submit btn-primary"

%hr

%ul.bordered-list
  - @groups.each do |group|
    %li
      .clearfix
        .pull-right.prepend-top-10
          = link_to t('general.edit'), edit_admin_group_path(group), id: "edit_#{dom_id(group)}", class: "btn btn-small"
          = link_to t('general.destroy'), [:admin, group], data: {confirm: t('.remove_group_are_you_sure', group: group.name)}, method: :delete, class: "btn btn-small btn-remove"

        %h4
          = link_to [:admin, group] do
            %i.icon-folder-close
            = group.name

          &rarr;
          %span.monospace
            %strong #{group.path}/
      .clearfix
        %p
          = truncate group.description, length: 150
      .clearfix
        %p.light
          #{t('.member', count: group.members.size)}, #{t('.project', count: group.projects.count)}


= paginate @groups, theme: "gitlab"
