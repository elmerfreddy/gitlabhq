%h3.page-title
  = t('.system_hooks')

%p.light
  = raw t('.system_hooks_can_be_used_for_bindign', link: link_to("#{t('.system_hooks')} ", help_system_hooks_path, class: "vlink"))

%hr


= form_for @hook, as: :hook, url: admin_hooks_path, html: { class: 'form-horizontal' } do |f|
  -if @hook.errors.any?
    .alert.alert-danger
      - @hook.errors.full_messages.each do |msg|
        %p= msg
  .form-group
    = f.label :url, "#{SystemHook.human_attribute_name('url')}:", class: 'control-label'
    .col-sm-10
      = f.text_field :url, class: "form-control"
  .form-actions
    = f.submit t('.add_system_hook'), class: "btn btn-create"
%hr

-if @hooks.any?
  .ui-box
    .title
      #{t('.system_hooks')} (#{@hooks.count})
    %ul.well-list
      - @hooks.each do |hook|
        %li
          .pull-right
            = link_to t('test_hook', scope: 'projects.hooks.index'), admin_hook_test_path(hook), class: "btn btn-small"
            = link_to t('general.remove'), admin_hook_path(hook), data: { confirm: t('general.are_you_sure') }, method: :delete, class: "btn btn-remove btn-small"
          = link_to admin_hook_path(hook) do
            %strong= hook.url
