.ui-box
  .title.clearfix
    = search_field_tag :filter_group, nil, placeholder: t('filter_by_name', scope: 'public.projects.index'), class: 'dash-filter form-control'
    - if current_user.can_create_group?
      %span.pull-right
        = link_to new_group_path, class: "btn btn-new" do
          %i.icon-plus
          = t('new_group', scope: 'admin.dashboard.index')
  %ul.well-list.dash-list
    - groups.each do |group|
      %li.group-row
        = link_to group_path(id: group.path), class: dom_class(group) do
          = image_tag group_icon(group.path), class: "avatar s24"
          %span.group-name.filter-title
            = truncate(group.name, length: 35)
          %span.arrow
            %i.icon-angle-right
    - if groups.blank?
      %li
        .nothing-here-block= t('.you_have_no_groups_yet')
