.ui-box
  .title.clearfix
    = search_field_tag :filter_projects, nil, placeholder: t('filter_by_name', scope: 'public.projects.index'), class: 'dash-filter form-control'
    - if current_user.can_create_project?
      %span.pull-right
        = link_to new_project_path, class: "btn btn-new" do
          %i.icon-plus
          = t('new_project_', scope: 'layouts.head_panel')

  %ul.well-list.dash-list
    - projects.each do |project|
      %li.project-row
        = render "project", project: project

    - if projects.blank?
      %li
        .nothing-here-block= t('.there_are_no_projects_here')
    - if @projects_count > @projects_limit
      %li.bottom
        %span.light
          = t('.limit_of_count_displayed', limit: @projects_limit, count: pluralize(@projects_count, 'project'))

        .pull-right.append-right-10
          = link_to projects_dashboard_path do
            = t('.show_all')
            %i.icon-angle-right
