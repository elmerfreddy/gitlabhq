%h3.page-title
  = t('.my_projects')
.pull-right
  .dropdown.inline
    %a.dropdown-toggle.btn.btn-small{href: '#', "data-toggle" => "dropdown"}
      %span.light #{t('sort', scope: 'public.projects.index')}:
      - if @sort.present?
        = t(@sort.humanize.parameterize.underscore, scope: 'public.projects.index')
      - else
        = t('name', scope: 'public.projects.index')
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to projects_dashboard_filter_path(sort: nil) do
          = t('name', scope: 'public.projects.index')
        = link_to projects_dashboard_filter_path(sort: 'newest') do
          = t('newest', scope: 'public.projects.index')
        = link_to projects_dashboard_filter_path(sort: 'oldest') do
          = t('oldest', scope: 'public.projects.index')
        = link_to projects_dashboard_filter_path(sort: 'recently_updated') do
          = t('recently_updated', scope: 'public.projects.index')
        = link_to projects_dashboard_filter_path(sort: 'last_updated') do
          = t('last_updated', scope: 'public.projects.index')
%p.light
  = t('.all_projects_you_have_access_to_are_listed_here')
%hr
.row
  .col-md-3.hidden-sm.hidden-xs.side-filters
    = render "projects_filter"
  .col-md-9
    %ul.bordered-list.my-projects.top-list
      - @projects.each do |project|
        %li.my-project-row
          %h4.project-title
            .project-access-icon
              = visibility_level_icon(project.visibility_level)
            = link_to project_path(project), class: dom_class(project) do
              = project.name_with_namespace

            - if current_user.can_leave_project?(project)
              .pull-right
                = link_to leave_project_team_members_path(project), data: { confirm: t('.leave_project_')}, method: :delete, remote: true, class: "btn-tiny btn remove-row", title: t('.leave_project') do
                  %i.icon-signout
                  = t('.leave')

            - if project.forked_from_project
              %small.pull-right
                %i.icon-code-fork
                #{t('.forked_from')}:
                = link_to project.forked_from_project.name_with_namespace, project_path(project.forked_from_project)
          .project-info
            .pull-right
              - if project.archived?
                %span.label
                  %i.icon-archive
                  = t('.archived')
              - project.labels.each do |label|
                %span.label.label-info
                  %i.icon-tag
                  = label.name
            - if project.description.present?
              %p= truncate project.description, length: 100
            .last-activity
              %span.light #{t('.last_activity')}:
              %span.date= project_last_activity(project)


        - if @projects.blank?
          %li
            .nothing-here-block= t('.there_are_no_projects_here')
    .bottom
      = paginate @projects, theme: "gitlab"

