= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "login-box", method: :post }) do |f|
  %h3.page-title= t('.reset_password')
  .devise-errors
    = devise_error_messages!
  .clearfix.append-bottom-20
    = f.email_field :email, placeholder: t('general.email'),  class: "form-control", required: true
  .clearfix.append-bottom-10
    = f.submit t('.reset_password'), class: "btn-primary btn"
  %hr
  %p
    %span.light
      = t('.already_have_login_and_password')
    %strong
      = link_to t('.sign_in'), new_session_path(resource_name)
