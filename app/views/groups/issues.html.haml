%h3.page-title
  = t('general.issues')
  %span.pull-right= t('nro_issues', scope: 'dashboard.issues', count: @issues.total_count)

%p.light
  = raw t('.only_issues_from_group_are_listed_here', group: @group.name)
  - if current_user
    = raw t('.to_see_all_issues_you_visit', link: link_to( t('dashboard', scope: 'layouts.head_panel').downcase, issues_dashboard_path))
%hr

.row
  .col-md-3
    = render 'shared/filter', entity: 'issue'
  .col-md-9
    = render 'shared/issues'
