%h3.page-title= t('.add_an_ssh_key')
%p.light
  = raw t('.paste_your_public_key_here', link: link_to(t('.the_ssh_help_page'), help_ssh_path))
%hr
= render 'form'

:javascript
  $('#key_key').on('keyup', function(){
    var title = $('#key_title'),
        val      = $('#key_key').val(),
        key_mail = val.match(/([a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+|\.[a-zA-Z0-9._-]+)/gi);

    if( key_mail && key_mail.length > 0 && title.val() == '' ){
      $('#key_title').val( key_mail );
    }
  });
