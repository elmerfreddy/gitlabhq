%h3.page-title
  = t('.deploy_keys_allow_read_only_access')

  = link_to new_project_deploy_key_path(@project), class: "btn btn-new pull-right", title: t('.new_deploy_key') do
    %i.icon-plus
    = t('.new_deploy_key')

%p.light
  = t('.deploy_keys_can_be_used_for')
  = t('.you_can_create_a_deploy_key')

%hr.clearfix

.row
  .col-md-6.enabled-keys
    %h5
      %strong.cgreen= t('.enabled_deploy_keys')
      = t('.for_this_project')
    %ul.bordered-list
      = render @enabled_keys
      - if @enabled_keys.blank?
        .light-well
          .nothing-here-block= raw t('.create_a_new_deploy_key', link: link_to(t('.new_deploy_key').downcase, new_project_deploy_key_path(@project)))
  .col-md-6.available-keys
    %h5
      %strong= t('.deploy_keys')
      = t('.from_projects_available_to_you')
    %ul.bordered-list
      = render @available_keys
      - if @available_keys.blank?
        .light-well
          .nothing-here-block= t('.deploy_keys_from_projects_you_have_access')
