%h3.page-title
  #{t('.deploy_key')}:
  = @key.title
  %small
    = t('.created_at')
    = @key.created_at.stamp("Aug 21, 2011")
.back-link
  = link_to project_deploy_keys_path(@project) do
    = raw t('.to_keys_list')
%hr
%pre= @key.key
.pull-right
  = link_to t('general.remove'), project_deploy_key_path(@project, @key), data: { confirm: t('general.are_you_sure') }, method: :delete, class: "btn-remove btn delete-key"
