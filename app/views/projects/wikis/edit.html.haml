= render 'nav'
.pull-right
  = render 'main_links'
%h3.page-title
  #{t('.editing')} -
  %span.light #{@wiki.title.titleize}
%hr
= render 'form'

.pull-right
  - if @wiki.persisted? && can?(current_user, :admin_wiki, @project)
    = link_to project_wiki_path(@project, @wiki), data: { confirm: t('.are_you_sure_you_want_to_delete_this_page')}, method: :delete, class: "btn btn-small btn-remove" do
      = t('.delete_this_page')
