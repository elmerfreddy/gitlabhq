- if cookies[:hide_no_ssh_message].blank? && current_user.require_ssh_key? && !current_user.hide_no_ssh_key
  .no-ssh-key-message
    .container
      = raw t('.you_wont_be_able_to_pull_or_push', link: link_to(t('.add_an_ssh_key'), new_profile_key_path))
      .pull-right.hidden-xs
        = link_to t('.dont_show_again'), profile_path(user: {hide_no_ssh_key: true}), method: :put, class: 'hide-no-ssh-message', remote: true
        |
        = link_to t('.remind_later'), '#', class: 'hide-no-ssh-message'
      .links-xs.visible-xs
        = link_to t('.add_key'), new_profile_key_path
        |
        = link_to t('.dont_show_again'), profile_path(user: {hide_no_ssh_key: true}), method: :put, class: 'hide-no-ssh-message', remote: true
        |
        = link_to t('.later'), '#', class: 'hide-no-ssh-message'
